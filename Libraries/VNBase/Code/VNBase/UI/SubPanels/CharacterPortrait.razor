@using Sandbox.UI;
@using System;

@namespace VNBase.UI

@attribute [StyleSheet]
@inherits SubPanel

<root class="portrait">
    <img src="@($"{Character.ActivePortraitPath}")" />
</root>

@code {
    public Character Character { get; set; }

    protected override int BuildHash()
    {
        return HashCode.Combine(Character, Character.ActivePortrait);
    }
}
